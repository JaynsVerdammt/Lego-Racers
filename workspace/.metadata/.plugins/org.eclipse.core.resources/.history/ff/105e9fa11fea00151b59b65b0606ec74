package carControl;

public class MotorControl extends Thread{
	
	private int topSpeed = 2000;
	private int currentSpeed;
	private int aimSpeed;
	private boolean semaphore = false;
	
	public MotorControl(){
		
	}
	
	public void run(){
	
		
	}
	
	
	public void accelerateTo(int speed){
		while(semaphore);
		semaphore = true;
		if(speed<topSpeed){
		this.aimSpeed = speed;
		}else{
			this.aimSpeed = this.topSpeed;
		}
		semaphore = false;
	}
	
	public void brakeTo(int speed){
		while(semaphore);
		semaphore = true;
		if(speed<this.currentSpeed){
		this.aimSpeed = speed;
		}else if(speed<0){
			this.aimSpeed=0;
		}
		semaphore = false;
	}

}

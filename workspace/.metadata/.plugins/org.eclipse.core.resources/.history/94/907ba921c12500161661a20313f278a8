import lejos.nxt.Button;
import lejos.nxt.ColorSensor;
import lejos.nxt.LCD;
import lejos.nxt.SensorPort;
import sensors.RGBControl;

public class SensorTest {
	public RGBControl rgbControlLeft;
	public RGBControl rgbControlRight;
	
	public SensorTest(){
		this.rgbControlLeft = new RGBControl(SensorPort.S1);
		this.rgbControlRight = new RGBControl(SensorPort.S2);
	}
	
	public String getColorValues(){
		int colorLeft = rgbControlLeft.getColor();
		int colorRight = rgbControlRight.getColor();
		return new String("Left: " + String.valueOf((colorLeft) + "Right: " + String.valueOf(colorRight)));
	}
	
	public static void main(String[] args) {
		SensorTest sensorTesting = new SensorTest();
		//ColorSensor colorSens1 = new ColorSensor(SensorPort.S1);
		LCD.drawString("ColorTest", 1, 1);
		while (Button.waitForAnyPress(1) == 0) {
			//LCD.drawInt(sensorTesting.rgbControlRight.getColor(), 2, 2);
			LCD.drawString(sensorTesting.getColorValues(), 0, 2);
		}
//		try{
//		SensorTest sensorTesting = new SensorTest();
//		
//
////		while(true){
//			//ausgeben wert
//			LCD.drawString(sensorTesting.getColorValues(), 0, 0);
////		}
//	}
//		catch(Exception e)
//		{
//			LCD.drawString(e.getMessage(), 0, 0);
//		}
	}
}

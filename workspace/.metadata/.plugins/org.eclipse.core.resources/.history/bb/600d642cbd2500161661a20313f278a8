import lejos.nxt.LCD;
import lejos.nxt.SensorPort;
import sensors.RGBControl;

public class SensorTest {
	RGBControl rgbControlLeft;
	RGBControl rgbControlRight;
	
	public SensorTest(){
		this.rgbControlLeft = new RGBControl(SensorPort.S1);
		this.rgbControlLeft = new RGBControl(SensorPort.S2);
	}
	
	public String getColorValues(){
		int colorLeft = rgbControlLeft.getColor();
		int colorRight = rgbControlRight.getColor();
		return new String("Left: " + String.valueOf((colorLeft) + "Right: " + String.valueOf(colorRight)));
	}
	
	public static void ColorSensorTest(String[] args) {
		// TODO Auto-generated method stub
		SensorTest sensorTesting = new SensorTest();
		while(true){
			//ausgeben wert
			LCD.drawString(sensorTesting.getColorValues(), 0, 0);
		}
	}
}
